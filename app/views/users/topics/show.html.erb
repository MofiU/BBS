<div class="row">
  <div class="col-sm-9">
    <div id="topics"  class="panel panel-default">
      <div class="panel-heading">
        <%= @topic.created_at %>
        <%= link_to users_topic_path(@topic), method: :delete do %><i class="glyphicon glyphicon-trash"></i> <% end %>
        <%= link_to edit_users_topic_path(@topic) do %><i class="glyphicon glyphicon-pencil"></i> <% end %>
      </div>
      <div class="panel-body">
        <div class="media">
          <div class="media-body">
            <div class="media-heading"><h5><b><%= @topic.title %></b></h5></div>
            <div class="media-body info"><%= @topic.body %></div>
          </div>
        </div>
      </div>
      <div class="panel-footer"></div>
    </div>
  </div>
  <%= render "sidebar" %>
</div>
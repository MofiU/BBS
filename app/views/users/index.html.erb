<div class="panel panel-default">
  <div class="panel-heading">成员列表</div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <th>ID</th>
        <th>头像</th>
        <th>邮箱</th>
        <th>用户名</th>
        <th>注册时间</th>
        <th>身份</th>
        <th>操作</th>
      </thead>
      <% if @users %>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.id, user_path(user) %></td>
              <th><%= link_to user_photo(user, 'avatar-48'), user_path(user) %></th>
              <td><%= user.email %></td>
              <td><%= user.username %></td>
              <td><%= format_time user.created_at %></td>
              <td><%= user.has_role?(:admin) ? '管理员' : '会员' %></td>
              <td>
                <%= render_user_operation(current_user, user) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
  <div class="panel-footer"><%= paginate @users %></div>
</div>




<div class="panel panel-default">
  <div class="panel-heading">成员列表</div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <th>ID</th>
        <th>头像</th>
        <th>邮箱</th>
        <th>用户名</th>
        <th>注册时间</th>
        <th>身份</th>
        <th>操作</th>
      </thead>
      <% if @users %>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <th><%= user_photo(user, 'avatar-48') %></th>
              <td><%= user.email %></td>
              <td><%= user.username %></td>
              <td><%= format_time user.created_at %></td>
              <td><%= user.has_role?(:admin) ? '管理员' : '会员' %></td>
              <td>
                <% if current_user != user %>
                  <% if user.has_role?(:admin) %>
                    <%= link_to '降级为会员', users_grant_user_path(user), method: :post %>
                  <% else %>
                    <%= link_to '提升为管理员', users_grant_admin_path(user), method: :post %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
  <div class="panel-footer"><%= paginate @users %></div>
</div>




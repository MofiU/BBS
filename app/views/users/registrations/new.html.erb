<div class="panel panel-default">
  <div class="panel-heading"><h2>Sign up</h2></div>
  <div class="panel-body">
    <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
      <%= f.input :email, label: false, placeholder: 'Email' %>
      <%= f.input :username, label: false, placeholder: 'Username' %>
      <%= f.input :password, label: false, placeholder: 'Password' %>
      <%= f.input :password_confirmation, label: false, placeholder: 'Confirm Password' %>
      <%= f.button :submit %>
    <% end %>
  </div>
  <div class="panel-footer"><%= render "users/shared/links" %></div>
</div>
